include @components/AppHeader/AppHeader.component.pug
include @components/AppFooter/AppFooter.component.pug
include @components/NavigationDrawer/NavigationDrawer.component.pug

block variables
	-
		let pageProps = {
			titlePrefix: "Milvus",
			title: "Home"
		}

doctype html
html(
	lang="en",
	dir="ltr",
	x-cloak,
	x-data
)
	head
		block head
			meta(charset="UTF-8")
			meta(http-equiv="X-UA-Compatible", content="ie=edge")
			meta(name="viewport", content="width=device-width, initial-scale=1.0")
			title #{pageProps.title} | #{pageProps.titlePrefix}
			meta(name="theme-color", content="#000000")
			block styles
				<link rel="preconnect" href="https://fonts.googleapis.com">
				<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
				<link href="https://fonts.googleapis.com/css2?family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&display=swap" rel="stylesheet">
				<link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@300..700&display=swap" rel="stylesheet">
				<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
				<link href="https://cdn.jsdelivr.net/npm/modern-normalize@2.0.0/modern-normalize.min.css" rel="stylesheet">
				<link href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" rel="stylesheet">
				link(rel="stylesheet", href=require("@app/app.scss"))
			link(rel="icon", type="image/x-icon", href=require("@assets/images/favicon.ico"))

	body
		#app
			block fixed
				+CNavigationDrawer()

			block header
				+CAppHeader()

			// main.main-content
			main.main-content
				block body
			// ## main.main-content

			block footer
				+CAppFooter()

		block scripts
			<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
			script(src="https://cdn.jsdelivr.net/npm/alpinejs@3.13.8/dist/cdn.min.js", defer)
			script(src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js", defer)
			script(src=require("@app/app.js"))
