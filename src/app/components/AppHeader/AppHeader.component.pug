mixin CAppHeader(static = false)
	if static
		.CAppHeaderBlock
	header.CAppHeader(
		x-data="CAppHeader"
	)
		.container
			a.CAppHeader__logo(href="/")
				if static
					img(
						src=require("@assets/images/logo-dark.svg"),
						alt="alt",
					)
